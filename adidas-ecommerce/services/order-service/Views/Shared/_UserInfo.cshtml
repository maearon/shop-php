@using OrderService.Models
@model ApplicationUser

<div class="user-info">
    <h2>@Model.Name</h2>
    <p>@Model.Email</p>
    <p>
        <a asp-controller="Users" asp-action="Show" asp-route-id="@Model.Id">View my profile</a>
    </p>
    <p>
        <strong>Microposts:</strong> @ViewBag.MicropostsCount
    </p>
</div>
